# Server Config
PORT=3001
NODE_ENV=production

# JWT Secret - CHANGE THIS IN PRODUCTION!
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-characters

# Ollama AI Config
OLLAMA_API_KEY=your-ollama-api-key
OLLAMA_BASE_URL=https://ollama.com
OLLAMA_MODEL=gemma3:27b

# OANDA Config
OANDA_API_KEY=your-oanda-api-key
OANDA_BASE_URL=https://api-fxpractice.oanda.com
OANDA_ACCOUNT_ID=your-account-id

# Telegram Bot Config (Optional - for trade signals)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Database
# For local development (SQLite)
DATABASE_PATH=./data/ict_trader.db

# For production (PostgreSQL - Railway)
# Railway automatically provides DATABASE_URL when you add PostgreSQL
DATABASE_URL=postgresql://username:password@host:port/database

# Railway will automatically set PORT and DATABASE_URL
# You only need to set the other variables in Railway dashboard
